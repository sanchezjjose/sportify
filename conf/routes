# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Other
GET     /home                       controllers.Application.home
GET     /roster 				  	controllers.Application.roster
GET     /schedule 				  	controllers.Application.schedule
GET     /signup 				  	controllers.SignUp.form
POST    /signup/submit              controllers.SignUp.submit
GET     /login                      controllers.Login.login
POST    /login/submit                      controllers.Login.submit

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
