# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                controllers.Application.index

GET     /send-email                                      controllers.Application.sendEmail

# Other
GET     /account                                         controllers.Account.account
POST    /account/submit                                  controllers.Account.submit
GET     /account/delete                                  controllers.Account.delete

GET     /home                                            controllers.Application.home
GET     /home/facebook/event/:game_id                    controllers.Facebook.createEvent(game_id: Int)

GET     /roster 				  	                     controllers.Application.roster

GET     /schedule 				                         controllers.Application.schedule
GET     /schedule/submit                                 controllers.Schedule.submit

GET     /signup 				  	                     controllers.SignUp.signup
POST    /signup/submit                                   controllers.SignUp.submit

GET     /login                                           controllers.Login.login
GET     /logout                                          controllers.Login.logout
POST    /login/submit                                    controllers.Login.authenticate
GET     /login/facebook/:access_token/:user_id           controllers.Facebook.authenticate(access_token, user_id)

GET     /news                                            controllers.Application.news

GET     /game/update_score                               controllers.Application.updateScore(game_id, result, score)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
