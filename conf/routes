# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


GET     /                                                            controllers.Homepage.index


# RSVP
PUT     /games/:id                                                controllers.Rsvp.update(id: Long)


# HOMEPAGE
GET     /team/:teamId                                                controllers.Homepage.home(teamId: Long)


# ROSTER
GET     /team/:teamId/roster                                         controllers.Roster.roster(teamId: Long)


# SCHEDULE
GET     /team/:teamId/schedule                                       controllers.Schedule.schedule(teamId: Long)


# ADMIN
GET     /team/:teamId/schedule/edit                                  controllers.Admin.edit(teamId: Long, game_id: Long)
GET     /team/:teamId/schedule/delete/:season_id/:game_id            controllers.Admin.delete(teamId: Long, season_id: Long, game_id: Long)
POST    /team/:teamId/schedule/save/:season_id/:is_playoff_game      controllers.Admin.save(teamId: Long, season_id: Long, is_playoff_game: String)
POST    /team/:teamId/schedule/update/:game_id/:is_playoff_game      controllers.Admin.update(teamId: Long, game_id: Long, is_playoff_game: String)


# ACCOUNT
GET     /account                                                     controllers.Account.account(team_id: Long)
GET     /account/delete                                              controllers.Account.delete
POST    /account/submit                                              controllers.Account.submit(team_id: Long)


# LOGIN
POST    /login/submit                                                controllers.Login.authenticate


# SIGNUP
POST    /signup/submit                                               controllers.SignUp.submit


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
