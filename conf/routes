# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                             controllers.Application.index

# Other
GET     /account                                                      controllers.Account.account
POST    /account/submit                                               controllers.Account.submit
GET     /account/delete                                               controllers.Account.delete

GET     /home                                                         controllers.Application.home
GET     /home/facebook/event/:game_id                                 controllers.Facebook.createEvent(game_id: Int)

GET     /roster          				  	                                  controllers.Application.roster

GET     /schedule 				                                            controllers.Schedule.schedule
GET     /schedule/rsvp                                                controllers.Schedule.changeRsvpStatus(game_id: Long, status: String)
GET     /schedule/submit                                              controllers.Schedule.submit
POST    /schedule/save/:season_id/:is_playoff_game                    controllers.Schedule.save(season_id: Long, is_playoff_game: String)
POST    /schedule/update/:game_id/:is_playoff_game                    controllers.Schedule.update(game_id: Long, is_playoff_game: String)
GET     /schedule/edit                                                controllers.Schedule.edit(game_id: Long)
GET     /schedule/delete/:season_id/:game_id                          controllers.Schedule.delete(season_id: Long, game_id: Long)

GET     /signup 				  	                                          controllers.SignUp.signup
POST    /signup/submit                                                controllers.SignUp.submit

GET     /login                                                        controllers.Login.login
GET     /logout                                                       controllers.Login.logout
POST    /login/submit                                                 controllers.Login.authenticate
GET     /login/facebook/:access_token/:user_id                        controllers.Facebook.authenticate(access_token, user_id)

GET     /news                                                         controllers.Application.news

GET     /game/rsvp                                                    controllers.Application.changeRsvpStatus(game_id: Long, status: String)

# Endpoints returning JSON
GET     /json/games                                                   controllers.Endpoints.games
GET     /json/game/:id                                                controllers.Endpoints.game(id: Long)
GET     /json/nextgame                                                controllers.Endpoints.nextgame
GET     /json/users                                                   controllers.Endpoints.users

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
